# Environment configuration for spam-shield
# Copy to .env and adjust values

# Server
LISTEN_PORT=8080
SERVER_BASE_URL=http://localhost:8080

# Database (MySQL/MariaDB)
DB_HOST=localhost
DB_USER=root
DB_PASS=changeme
DB_NAME=spam_shield

# Session / Auth
SESSION_SECRET=replace_with_secure_random
SESSION_COOKIE_NAME=sid
AUTH_ENABLE_REGISTRATION=true
API_KEY_HEADER=x-api-key
RESET_TOKEN_TTL_MINUTES=60

# Node environment
# NODE_ENV is sanitized to development or production
NODE_ENV=development
