{
  "name": "spam-shield",
  "version": "0.5.0",
  "description": "A Node.js application for spam detection and IP reputation management.",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "concurrently -n server,assets -c green,blue \"nodemon src/server.js\" \"npm:build -- --watch\"",
    "clean": "rimraf dist && rimraf public/build/*",
    "build": "npm run clean && node build.js",
    "build:dist": "npm run build && node scripts/build-dist.js",
    "test": "jest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed:run": "knex seed:run",
    "verify:html": "node scripts/verify-html.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.0",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "connect-session-knex": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "handlebars": "^4.7.8",
    "knex": "^3.1.0",
    "mysql2": "^3.11.3",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-headerapikey": "^1.2.2",
    "passport-local": "^1.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.1.8",
    "fs-extra": "^11.3.2",
    "html-minifier-terser": "^7.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.1.0",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "spam",
    "ip-reputation",
    "nodejs",
    "express"
  ],
  "author": "Paul Faulkner",
  "license": "MIT"
}
