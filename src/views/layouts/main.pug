doctype html
html(lang="en" data-bs-theme="auto")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title || 'Spam Shield'}
    // App favicon
    link(rel="icon" type="image/webp" href="/headwall-icon.webp")
    // Bundled CSS (Bootstrap + Icons + App)
    link(rel="stylesheet", href="/build/bundle.css")
  body
    // Navbar
    include ../partials/navbar
    // Main content
    main.container.py-4
      block content
    // Footer
    include ../partials/footer
    // Bundled JS (Bootstrap + App)
    script(src="/build/bundle.js")
    block scripts
