extends ../layouts/main
include ../mixins/forms

block content
  .row.justify-content-center
    .col-md-7.col-lg-6
      h1.h3.mb-3 Create account
      if error
        .alert.alert-danger(role='alert')= error
      form(method='post' action='/register')
        +formGroup('email', 'Email', 'email')
        .mb-3
          label.form-label(for='password') Password
          input.form-control(type='password' name='password' id='password' required)
          .form-text Use at least #{(config && config.auth && config.auth.passwordPolicy && config.auth.passwordPolicy.minLength) || 12} characters with a mix of upper/lowercase, numbers, and symbols.
        +submitRow('Create account')
      .mt-3
        a.btn.btn-link.btn-sm(href='/login') Back to login