extends ../layouts/main
include ../mixins/forms

block content
  .row.justify-content-center
    .col-md-6.col-lg-5
      h1.h3.mb-3 Reset password
      if error
        .alert.alert-danger(role='alert')= error
      if info
        .alert.alert-info(role='status')= info
      form(method='post' action='/reset-password')
        +formGroup('email', 'Email', 'email')
        +submitRow('Send reset link')
      .mt-3
        a.btn.btn-link.btn-sm(href='/login') Back to login